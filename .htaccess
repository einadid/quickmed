# QuickMed - Localhost Configuration

RewriteEngine On

# IMPORTANT: Change this if your folder name is different
# If URL is localhost/quickmed, then use /quickmed/
RewriteBase /quickmed/

# 1. Custom Error Pages (Must include folder name)
ErrorDocument 404 /quickmed/404.php
ErrorDocument 403 /quickmed/404.php
ErrorDocument 500 /quickmed/404.php

# 2. Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# 3. Prevent Directory Listing
Options -Indexes

# 4. Protect Sensitive Files
<FilesMatch "^(config\.php|\.env|\.htaccess)$">
    Order allow,deny
    Deny from all
</FilesMatch>

RewriteEngine On
RewriteBase /quickmed/

# 1. Custom Error Pages
ErrorDocument 404 /quickmed/404.php
ErrorDocument 403 /quickmed/404.php
ErrorDocument 500 /quickmed/404.php

# 2. To remove .php extension (Optional)
# যদি কেউ browser এ .php ছাড়া লেখে, তবে সার্ভার সেটাকে .php ফাইল হিসেবে চিনবে
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# 3. Allow direct access to existing files
# যদি ফাইলটি বাস্তবে থাকে (যেমন index.php), তবে রিরাইট রুল এপ্লাই হবে না
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# 4. Prevent Directory Listing
Options -Indexes